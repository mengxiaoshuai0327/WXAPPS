/* pages/messages/detail/detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.message-detail {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.message-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.message-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.message-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.4;
}

.message-time {
  margin-bottom: 30rpx;
  font-size: 26rpx;
  color: #999;
}

.time-label {
  margin-right: 8rpx;
}

.time-value {
  color: #666;
}

.message-content {
  line-height: 1.8;
}

.content-text {
  font-size: 30rpx;
  color: #333;
  white-space: pre-wrap;
  word-wrap: break-word;
}






























































