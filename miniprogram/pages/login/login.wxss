/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);
  border-radius: 0 0 50% 50%;
  transform: scale(1.2);
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 60rpx 60rpx 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 50rpx;
  padding-top: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 1rpx;
}

/* 登录方式切换 */
.login-type-tabs {
  display: flex;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 18rpx 16rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item .tab-icon {
  font-size: 32rpx;
  margin-bottom: 6rpx;
  display: block;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: 600;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

/* 表单 */
.form {
  background-color: #fff;
  border-radius: 30rpx;
  padding: 40rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.15);
}

.form-item {
  margin-bottom: 28rpx;
}

.code-form-item {
  position: relative;
  margin-bottom: 28rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid #e9ecef;
  padding: 0 24rpx;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  background-color: #fff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.input-icon {
  font-size: 30rpx;
  margin-right: 14rpx;
  opacity: 0.6;
}

.input {
  flex: 1;
  height: 84rpx;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
}

.input::placeholder {
  color: #adb5bd;
}

.code-input-wrapper {
  padding-right: 0;
}

.code-input {
  padding-right: 180rpx;
}

/* 验证码按钮 */
.code-btn {
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 64rpx;
  padding: 0 18rpx;
  min-width: 140rpx;
  max-width: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.code-btn::after {
  border: none;
}

.code-btn:not(.disabled):active {
  transform: translateY(-50%) scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

.code-btn.disabled {
  background: #e9ecef;
  color: #adb5bd;
  box-shadow: none;
}

.code-btn-text {
  color: #fff;
  font-weight: 500;
  font-size: 22rpx;
}

.countdown-text {
  color: #adb5bd;
  font-size: 20rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  color: #adb5bd;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.login-btn::after {
  border: none;
}

.login-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
}

.login-btn.active:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.login-btn-text {
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 注册链接 */
.register-link {
  text-align: center;
  font-size: 28rpx;
  padding-top: 20rpx;
}

.register-text {
  color: #6c757d;
}

.link-text {
  color: #667eea;
  font-weight: 600;
  margin-left: 10rpx;
  text-decoration: underline;
}

