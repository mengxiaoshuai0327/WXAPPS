/* pages/ticket-purchase/ticket-purchase.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  background-color: #fff;
  padding: 60rpx 30rpx 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.header-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  background-color: #1a1a1a;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-text {
  font-size: 60rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 15rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #999;
}

.content-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin: 0 20rpx;
  padding: 40rpx 30rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-label {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.label-tip {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
  font-weight: normal;
}

.required {
  color: #ff4444;
  margin-right: 4rpx;
}

.quantity-control {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.quantity-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0;
  font-size: 32rpx;
  color: #1a1a1a;
  box-sizing: border-box;
  text-align: center;
}

.quantity-tip {
  font-size: 24rpx;
  color: #999;
}

.quantity-input-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.quantity-btn {
  width: 70rpx;
  height: 70rpx;
  background-color: #667eea;
  color: #fff;
  border-radius: 8rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  user-select: none;
}

.quantity-btn.disabled {
  background-color: #e0e0e0;
  color: #999;
  opacity: 0.6;
}

.quantity-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

.quantity-display {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  /* 使显示框看起来不可编辑 */
  cursor: default;
  user-select: none;
}

.coupon-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  background-color: #fff;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
}

.coupon-text {
  font-size: 28rpx;
  color: #1a1a1a;
  flex: 1;
}

.coupon-text.placeholder {
  color: #999;
}

.arrow {
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}

.btn-clear {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  margin-right: 10rpx;
}

.order-section {
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.order-item.total {
  margin-top: 20rpx;
  margin-bottom: 0;
}

.order-label {
  color: #666;
}

.order-value {
  color: #1a1a1a;
  font-weight: 500;
}

.order-value.price {
  color: #1a1a1a;
}

.order-value.discount {
  color: #52c41a;
}

.order-value.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.order-divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

.info-section {
  display: flex;
  align-items: flex-start;
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #1a1a1a;
  color: #fff;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.info-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

.pay-section {
  padding: 30rpx 20rpx;
}

.btn-pay {
  width: 100%;
  height: 88rpx;
  background-color: #1a1a1a;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-pay[disabled] {
  background-color: #ccc;
  color: #999;
}

.pay-icon {
  font-size: 32rpx;
}

.coupon-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.coupon-picker {
  width: 100%;
  max-height: 70vh;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.picker-close {
  font-size: 48rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-content {
  max-height: calc(70vh - 120rpx);
  overflow-y: auto;
}

.coupon-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.coupon-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.coupon-amount {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.coupon-expiry {
  font-size: 24rpx;
  color: #999;
}

.option-check {
  font-size: 32rpx;
  color: #1a1a1a;
  margin-left: 20rpx;
}

.picker-empty {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

