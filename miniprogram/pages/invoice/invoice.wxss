/* pages/invoice/invoice.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部按钮留出空间 */
}

.header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 0 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1a1a1a;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1a1a1a;
  border-radius: 2rpx;
}

.tickets-list {
  padding: 20rpx;
}

.ticket-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.ticket-info {
  flex: 1;
}

.ticket-code {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.ticket-amount {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.ticket-time {
  font-size: 24rpx;
  color: #999;
}

.ticket-action {
  margin-left: 20rpx;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  transition: all 0.3s;
  box-sizing: border-box;
}

.checkbox.checked {
  background-color: #1a1a1a;
  border-color: #1a1a1a;
}

.checkmark {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
  display: block;
}

.invoice-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.invoice-status-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.invoice-status-text.status-pending {
  color: #ff9800;
  font-weight: 500;
}

.action-section {
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.btn-invoice {
  width: 100%;
  background-color: #1a1a1a;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 发票信息填写弹窗 */
.invoice-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-content {
  background-color: #fff;
  border-radius: 16rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
  min-height: 0; /* 确保 flex 子元素可以正确收缩 */
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-label.required::before {
  content: '*';
  color: #ff4444;
  margin-right: 4rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1a1a1a;
  background-color: #fff;
}

.form-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.form-tips {
  margin-top: 20rpx;
  padding: 24rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  word-break: break-all;
  word-wrap: break-word;
  white-space: normal;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #e0e0e0;
}

.btn-cancel {
  flex: 1;
  background-color: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.btn-submit {
  flex: 1;
  background-color: #1a1a1a;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

