/* pages/checkin/checkin.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  background-color: #fff;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.checkin-list {
  padding: 30rpx;
}

.checkin-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.course-content {
  flex: 1;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 10rpx;
}

.course-info {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.course-action {
  margin-left: 30rpx;
}

.btn-checkin {
  background-color: #4A90E2;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
  border: none;
  line-height: 1;
}

.btn-checkin::after {
  border: none;
}

.empty-state {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

