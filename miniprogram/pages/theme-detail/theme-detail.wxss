/* pages/theme-detail/theme-detail.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);
  border-radius: 0 0 50% 50%;
  transform: scale(1.2);
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 40rpx 30rpx 30rpx;
}

/* 主题信息卡片 */
.theme-info-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.theme-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.theme-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
}

.theme-icon {
  font-size: 50rpx;
}

.theme-title-wrapper {
  flex: 1;
}

.theme-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.theme-module {
  font-size: 26rpx;
  color: #999;
}

.theme-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 排课列表 */
.schedule-list {
  padding: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.schedule-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 卡片主体 */
.card-body {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

/* 左侧图片：授课教师头像 */
.course-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
  background-color: #f5f5f5;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.instructor-avatar {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* 右侧内容 */
.course-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 4rpx;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-icon {
  font-size: 28rpx;
  width: 32rpx;
  text-align: center;
}

.info-icon.blue {
  color: #667eea;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.info-text.blue {
  color: #667eea;
  font-weight: 500;
}

/* 底部 */
.card-footer {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.location-row {
  width: 100%;
}

.location-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  width: 100%;
  padding: 14rpx 18rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.15);
}

.location-icon {
  font-size: 32rpx;
  color: #667eea;
  flex-shrink: 0;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  flex: 1;
  line-height: 1.6;
  /* 最多显示2行 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
}

.footer-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
  flex-wrap: nowrap;
  width: 100%;
}

.status-badge {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 12rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  letter-spacing: 0.5rpx;
}

.status-badge.available {
  color: #667eea;
  background-color: #f0f4ff;
}

.status-badge.draft {
  color: #e6a23c;
  background-color: #fdf6ec;
}

.status-badge.in-progress {
  color: #67c23a;
  background-color: #f0f9ff;
}

.btn-action {
  font-size: 26rpx;
  font-weight: 500;
  padding: 10rpx 24rpx;
  border-radius: 12rpx;
  border: none;
  line-height: 1.5;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  vertical-align: middle;
  letter-spacing: 0.5rpx;
  min-height: 64rpx;
  box-sizing: border-box;
}

.btn-action::after {
  border: none;
}

.btn-book {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
  font-size: 26rpx;
  padding: 10rpx 32rpx;
  border-radius: 12rpx;
  flex: 0 0 auto;
  white-space: nowrap;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 24rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #fff;
  font-size: 28rpx;
}
