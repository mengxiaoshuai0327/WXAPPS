/* pages/course-detail/course-detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 30rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.course-detail {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.header {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.label {
  color: #999;
  width: 160rpx;
}

.value {
  color: #1a1a1a;
  flex: 1;
}

.content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.action-section {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.btn-purchase {
  width: 100%;
  height: 88rpx;
  background-color: #1a1a1a;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 统计数据样式 */
.stats-grid {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #409eff;
}

.stats-scores {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.score-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.score-item:last-child {
  border-bottom: none;
}

.score-label {
  font-size: 28rpx;
  color: #666;
}

.score-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #409eff;
}

.score-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

/* 评价建议样式 */
.feedback-list {
  margin-top: 20rpx;
}

.feedback-item {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.feedback-item:last-child {
  margin-bottom: 0;
}

.feedback-item-clickable {
  position: relative;
  padding-bottom: 60rpx;
}

.feedback-item-clickable:active {
  background-color: #eeeeee;
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.feedback-user {
  font-size: 26rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.feedback-date {
  font-size: 24rpx;
  color: #999;
}

.feedback-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-all;
}

.feedback-action {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.feedback-action-text {
  font-size: 24rpx;
  color: #409eff;
}

