/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);
  border-radius: 0 0 50% 50%;
  transform: scale(1.2);
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 60rpx 30rpx 40rpx;
}

.user-card-section {
  margin-bottom: 30rpx;
}

.user-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.user-avatar image,
.user-avatar .avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.avatar-text {
  font-size: 40rpx;
  color: #999;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 6rpx;
}

.user-badges {
  display: flex;
  gap: 10rpx;
}

.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.badge.instructor {
  background-color: #ff9800;
  color: #fff;
}

.badge.channel {
  background-color: #4caf50;
  color: #fff;
}

.badge.member {
  background-color: #e3f2fd;
  color: #1976d2;
}

.badge.invite-badge {
  background-color: #ffd700;
  color: #8b4513;
  font-weight: bold;
}

.arrow {
  font-size: 36rpx;
  color: #ccc;
  font-weight: 300;
}

.section-card {
  background-color: #fff;
  margin-bottom: 30rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 15rpx;
}

.ticket-stats {
  display: flex;
  justify-content: space-around;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 15rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.ticket-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

/* 邀请专区样式 */
.invite-qr-card {
  margin-bottom: 20rpx;
}

.qr-code-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.15);
}

.qr-code-image {
  width: 280rpx;
  height: 280rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.qr-code-tip {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
}

.invite-stats-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

/* 邀请专区操作按钮 */
.action-buttons {
  width: 100%;
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.action-btn::after {
  border: none;
}

.action-btn.save-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.action-btn.share-btn {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
  box-shadow: 0 4rpx 16rpx rgba(86, 171, 47, 0.3);
}

.action-btn .btn-icon {
  font-size: 32rpx;
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.menu-item:active {
  background-color: rgba(102, 126, 234, 0.05);
  margin: 0 -30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 未登录状态 */
.empty-login-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  margin-top: 40rpx;
}

.empty-login {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.login-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 80rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.btn-primary {
  width: 100%;
  background-color: #1a1a1a;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

/* 退出登录 */
.logout-section {
  padding: 20rpx 0 50rpx;
  background-color: transparent;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  color: #ff4444;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid #ffe0e0;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  transition: all 0.3s ease;
}

.logout-btn::after {
  border: none;
}

.logout-text {
  color: #ff4444;
  font-size: 28rpx;
  letter-spacing: 1rpx;
  font-weight: 500;
}

.logout-btn:active {
  background-color: #fff5f5;
  border-color: #ffcccc;
  transform: scale(0.98);
}

