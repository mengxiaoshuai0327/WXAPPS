/* pages/instructor-schedule-detail/instructor-schedule-detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

.schedule-detail {
  padding: 20rpx;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.info-label {
  color: #666;
  min-width: 160rpx;
  margin-right: 16rpx;
}

.info-value {
  color: #1a1a1a;
  flex: 1;
}

.users-list {
  padding-top: 10rpx;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-item:last-child {
  border-bottom: none;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.avatar-text {
  font-size: 32rpx;
  color: #999;
}

.user-info {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  gap: 16rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.checkin-badge {
  background-color: #4CAF50;
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
  display: flex;
  align-items: center;
}

.checkin-text {
  font-size: 22rpx;
  color: #fff;
  font-weight: 500;
}

.user-detail {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.empty-state {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

.action-section {
  padding: 30rpx 20rpx;
}

.btn-trigger {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(74, 144, 226, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.btn-trigger::after {
  border: none;
}

.btn-trigger.loading {
  background: linear-gradient(135deg, #ccc 0%, #bbb 100%);
  box-shadow: none;
}

.btn-trigger.disabled {
  background: linear-gradient(135deg, #ccc 0%, #bbb 100%);
  color: #999;
  box-shadow: none;
  opacity: 0.6;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.btn-loading {
  font-size: 32rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.tip-section {
  padding: 30rpx 20rpx;
  text-align: center;
  background-color: #f0f9ff;
  border-radius: 12rpx;
  margin: 0 20rpx 20rpx;
}

.success-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.success-icon {
  width: 48rpx;
  height: 48rpx;
  background-color: #4CAF50;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.success-text {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
}

.tip-detail {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

.trigger-tip {
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background-color: #fff3cd;
  border-radius: 8rpx;
  border-left: 4rpx solid #ffc107;
}

.tip-text {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.6;
}

