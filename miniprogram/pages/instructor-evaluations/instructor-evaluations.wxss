/* pages/instructor-evaluations/instructor-evaluations.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.courses-list {
  padding: 0 20rpx;
}

.course-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.course-content {
  flex: 1;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.rating-overview {
  display: flex;
  gap: 30rpx;
}

.rating-item {
  display: flex;
  align-items: center;
}

.rating-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.rating-value {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: bold;
}

.course-action {
  margin-left: 20rpx;
}

.action-text {
  font-size: 28rpx;
  color: #4A90E2;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}







