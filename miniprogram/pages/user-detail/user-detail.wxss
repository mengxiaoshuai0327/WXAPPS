/* pages/user-detail/user-detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.user-header {
  background-color: #fff;
  padding: 60rpx 30rpx 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  overflow: hidden;
  position: relative;
  cursor: pointer;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.avatar-text {
  font-size: 64rpx;
  color: #999;
}

.avatar-upload-hint {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 20rpx;
  padding: 8rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 0 0 80rpx 80rpx;
}

.upload-icon {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.upload-text {
  font-size: 20rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.info-section {
  background-color: #fff;
  padding: 0;
  margin-bottom: 20rpx;
  border-radius: 0;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  padding: 36rpx 30rpx 24rpx;
  background-color: #fff;
  border-top: none;
  margin-top: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.section-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
  margin-bottom: 18rpx;
  margin-top: 30rpx;
  line-height: 1.5;
}

.info-value {
  font-size: 30rpx;
  color: #1a1a1a;
  margin-bottom: 30rpx;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-all;
}

.info-input {
  width: 100%;
  font-size: 30rpx;
  color: #1a1a1a;
  padding: 0;
  margin-bottom: 30rpx;
  background-color: transparent;
  border: none;
  box-sizing: border-box;
  line-height: 1.6;
  min-height: 46rpx;
}

.info-input::placeholder {
  color: #999;
  font-size: 30rpx;
}

.picker-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 0;
  margin-bottom: 30rpx;
  background-color: transparent;
  border: none;
  box-sizing: border-box;
  min-height: 46rpx;
}

.picker-content {
  flex: 1;
  overflow: visible;
  padding-right: 20rpx;
}

.picker-text {
  color: #1a1a1a;
  font-size: 30rpx;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-all;
  display: block;
}

.picker-placeholder {
  color: #999;
  font-size: 30rpx;
  line-height: 1.6;
  display: block;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
  flex-shrink: 0;
  font-weight: 300;
  line-height: 1;
  opacity: 0.6;
}

/* 多选弹窗样式 */
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.picker-modal-content {
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.picker-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.picker-modal-close {
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.picker-modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 30rpx 40rpx;
}

.modal-checkbox-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-checkbox-item:last-child {
  border-bottom: none;
}

.modal-checkbox-label {
  font-size: 30rpx;
  color: #1a1a1a !important;
  width: 100%;
  line-height: 1.6;
  transition: color 0.3s ease;
}

.modal-checkbox-label.selected {
  color: #ff0000 !important;
}

.action-section {
  padding: 40rpx 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.btn-save {
  width: 100%;
  background-color: #1a1a1a;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
}
