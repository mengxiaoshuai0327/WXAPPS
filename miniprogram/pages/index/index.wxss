/* pages/index/index.wxss */
.container {
  padding: 0;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 320rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.85) 0%, rgba(118, 75, 162, 0.85) 100%);
  border-radius: 0 0 60% 60%;
  transform: scale(1.3);
  z-index: 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 50rpx 30rpx 40rpx;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #999;
}

/* Banner */
.banner-container {
  position: relative;
  width: 100%;
  height: 340rpx;
  overflow: hidden;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.18);
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 会员首页头部 */
.member-header-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.95) 100%);
  padding: 36rpx 32rpx;
  margin-bottom: 28rpx;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.12);
  position: relative;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
}

.user-info {
  display: flex;
  align-items: center;
}

.listen-btn-wrapper {
  position: absolute;
  top: 28rpx;
  right: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
}

.listen-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.listen-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.35),
              0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 12rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.listen-icon-wrapper::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.listen-btn.pressed .listen-icon-wrapper {
  transform: scale(0.92);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.25),
              0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.listen-icon {
  font-size: 44rpx;
  position: relative;
  z-index: 1;
  line-height: 1;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.listen-text {
  font-size: 22rpx;
  color: #ff6b9d;
  font-weight: 600;
  line-height: 1.2;
  letter-spacing: 0.5rpx;
}

.user-avatar {
  width: 108rpx;
  height: 108rpx;
  border-radius: 54rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 28rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4),
              inset 0 2rpx 4rpx rgba(255, 255, 255, 0.2);
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 54rpx;
}

.user-text {
  flex: 1;
  min-width: 0;
}

.welcome-text {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
  font-weight: 400;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.subtitle-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 课券余额卡片 */
.ticket-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.95) 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.ticket-card:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
}

.ticket-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.ticket-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 215, 0, 0.35),
              inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

.ticket-icon {
  font-size: 48rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.ticket-info {
  flex: 1;
}

.ticket-count {
  font-size: 56rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.2;
  margin-bottom: 8rpx;
  letter-spacing: -1rpx;
}

.ticket-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.ticket-link {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
}

/* Section卡片 */
.section-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.95) 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
}

.section-link {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
}

/* 已预订课程 */
.booked-courses-scroll {
  white-space: nowrap;
  width: 100%;
}

.booked-course-card {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  vertical-align: top;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
}

.booked-course-card:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.booked-course-card:last-child {
  margin-right: 0;
}

.course-card-content {
  display: flex;
  flex-direction: column;
}

.course-card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}

.course-card-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.course-card-info:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.info-icon.blue {
  color: #667eea;
}

.info-value {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-value.blue {
  color: #667eea;
  font-weight: 600;
}

.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
  display: block;
}

.empty-hint {
  font-size: 24rpx;
  color: #bbb;
  margin-bottom: 32rpx;
  display: block;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

/* 评价卡片 */
.evaluation-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
}

.evaluation-card:active {
  transform: scale(0.98);
