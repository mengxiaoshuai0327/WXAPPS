}

.message-item:last-child {
  border-bottom: none;
}

.message-item:active {
  background-color: rgba(102, 126, 234, 0.03);
  margin: 0 -32rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  border-radius: 16rpx;
}

.message-icon-wrapper {
  width: 72rpx;
