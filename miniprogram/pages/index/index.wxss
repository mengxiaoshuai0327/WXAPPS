  margin-bottom: 40rpx;
}

.theme-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 24rpx;
}

.theme-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.theme-item:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.theme-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.icon-text {
  font-size: 48rpx;
}

.theme-title {
  font-size: 26rpx;
  color: #1a1a1a;
  font-weight: 600;
  text-align: center;
}

/* 未激活主题样式 */
.theme-item-inactive {
  opacity: 0.75;
  background-color: #f5f5f5;
}

.theme-icon-inactive {
  opacity: 0.8;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.theme-title-inactive {
  color: #999;
  font-weight: 400;
}

