/* pages/evaluation/detail/detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.course-info {
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.course-meta {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.meta-label {
  color: #666;
  margin-right: 16rpx;
  min-width: 140rpx;
}

.meta-value {
  color: #333;
  flex: 1;
}

.answers-section {
  background-color: #fff;
  padding: 40rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.question-item {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.question-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.question-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.answer-item {
  margin-top: 20rpx;
}

.answer-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  display: block;
}

.case-ratings {
  margin-top: 20rpx;
}

.case-rating-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.case-name {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.case-score {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.matrix-answers {
  margin-top: 20rpx;
}

.matrix-answer-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.matrix-row-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  min-width: 300rpx;
}

.matrix-col-label {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.feedback-section {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #eee;
}

.feedback-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.empty-answers {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

