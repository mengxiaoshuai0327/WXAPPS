/* pages/evaluation/submit/submit.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);
  border-radius: 0 0 50% 50%;
  transform: scale(1.2);
  z-index: 0;
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 40rpx 30rpx 40rpx;
}

/* 课程信息卡片 */
.course-info-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.course-meta {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.meta-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.meta-icon {
  font-size: 28rpx;
}

.meta-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #999;
}

.meta-value {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

/* 评价表单 */
.evaluation-form {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-section {
  margin-bottom: 40rpx;
}

.question-card {
  background-color: #fafafa;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 4rpx solid #667eea;
}

.question-header {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.question-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.section-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.6;
}

.required-mark {
  color: #ff4444;
  margin-left: 4rpx;
  font-weight: bold;
}

/* 选项样式 */
.question-options {
  margin-top: 16rpx;
  padding-left: 64rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.option-item:last-child {
  border-bottom: none;
}

.option-item:active {
  background-color: rgba(102, 126, 234, 0.05);
  margin: 0 -24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-radius: 12rpx;
}

.radio-wrapper,
.checkbox-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
}

.option-text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  flex: 1;
}

/* 评分题 */
.rating-question {
  margin-top: 16rpx;
  padding-left: 64rpx;
}

.rating-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.rating-item:last-child {
  border-bottom: none;
}

.rating-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  min-width: 200rpx;
  line-height: 1.5;
}

.rating-stars {
  display: flex;
  gap: 8rpx;
}

.rating-stars .star {
  font-size: 48rpx;
  opacity: 0.3;
  transition: all 0.3s ease;
  cursor: pointer;
}

.rating-stars .star.active {
  opacity: 1;
  transform: scale(1.1);
  filter: drop-shadow(0 2rpx 4rpx rgba(102, 126, 234, 0.3));
}

/* 文本题 */
.text-question {
  margin-top: 16rpx;
  padding-left: 64rpx;
}

.text-input {
  width: 100%;
  min-height: 88rpx;
  max-height: 400rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background-color: #fff;
  transition: all 0.3s ease;
  box-sizing: border-box;
  overflow-y: auto;
  display: block;
}

.text-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
  outline: none;
}

/* 矩阵题 */
.matrix-question {
  margin-top: 16rpx;
  padding-left: 64rpx;
}

.matrix-select-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.matrix-select-item {
  background-color: #fff;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
}

.matrix-select-item:active {
  border-color: #667eea;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.1);
}

.matrix-select-label {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.matrix-options-wrapper {
  padding-left: 0;
}

.matrix-option-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  transition: all 0.3s ease;
}

.matrix-option-item:active {
  background-color: rgba(102, 126, 234, 0.05);
  margin: 0 -24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-radius: 8rpx;
}

.matrix-error {
  padding: 20rpx;
  color: #ff4444;
  font-size: 24rpx;
  text-align: center;
}

/* 提交按钮 */
.form-actions {
  margin-top: 50rpx;
  padding-bottom: 20rpx;
}

.btn-submit {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}

.btn-submit::after {
  border: none;
}

.btn-submit:active:not([disabled]) {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.btn-submit.submitting,
.btn-submit[disabled] {
  background: linear-gradient(135deg, #ccc 0%, #bbb 100%);
  box-shadow: none;
  opacity: 0.7;
}

.btn-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.btn-loading {
  font-size: 28rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  padding: 100rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 20rpx;
}
