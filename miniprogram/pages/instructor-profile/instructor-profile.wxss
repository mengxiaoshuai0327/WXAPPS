/* pages/instructor-profile/instructor-profile.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.profile-header {
  background-color: #fff;
  padding: 60rpx 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.instructor-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  overflow: hidden;
  position: relative;
  cursor: pointer;
}

.instructor-avatar image {
  width: 100%;
  height: 100%;
}

.avatar-text {
  font-size: 64rpx;
  color: #999;
}

.avatar-upload-hint {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 20rpx;
  padding: 8rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 0 0 80rpx 80rpx;
}

.upload-icon {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.upload-text {
  font-size: 20rpx;
}

.instructor-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.info-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.tip-section {
  padding: 30rpx;
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.edit-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background-color: #4A90E2;
  border-radius: 8rpx;
  color: #fff;
  font-size: 24rpx;
}

.edit-icon {
  margin-right: 4rpx;
  font-size: 24rpx;
}

.edit-text {
  font-size: 24rpx;
}

.edit-container {
  margin-top: 20rpx;
}

.edit-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.edit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 20rpx;
}

.btn-cancel,
.btn-save {
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-save {
  background-color: #4A90E2;
  color: #fff;
}

.btn-cancel::after,
.btn-save::after {
  border: none;
}

/* 课程列表样式 */
.courses-list {
  margin-top: 20rpx;
}

.course-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-item:last-child {
  border-bottom: none;
}

.course-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.course-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.empty-courses {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
