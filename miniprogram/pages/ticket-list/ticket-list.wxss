/* pages/ticket-list/ticket-list.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.tabs {
  display: flex;
  background-color: #fff;
  padding: 16rpx 0;
  margin-bottom: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  flex: 0 0 auto;
  text-align: center;
  padding: 12rpx 16rpx;
  font-size: 26rpx;
  color: #666;
  border-bottom: 2rpx solid transparent;
  min-width: 100rpx;
}

.tab-item.active {
  color: #1a1a1a;
  border-bottom-color: #1a1a1a;
  font-weight: bold;
}

.ticket-list {
  padding: 0 20rpx;
}

.ticket-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.ticket-item:active {
  background-color: #f8f9fa;
  transform: scale(0.98);
}

.ticket-code {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 15rpx;
}

.ticket-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 26rpx;
  color: #999;
}

.info-row {
  display: flex;
  align-items: center;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

