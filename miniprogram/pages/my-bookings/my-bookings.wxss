/* pages/my-bookings/my-bookings.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.bookings-list {
  padding: 0 20rpx;
}

.booking-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 顶部主题标签 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.theme-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #4A90E2;
  margin-right: 8rpx;
}

.theme-name {
  font-size: 26rpx;
  color: #333;
}

/* 卡片主体 */
.card-body {
  margin-bottom: 20rpx;
}

.course-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 4rpx;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-icon {
  font-size: 28rpx;
  width: 32rpx;
  text-align: center;
}

.info-icon.blue {
  color: #4A90E2;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.info-text.blue {
  color: #4A90E2;
  font-weight: 500;
}

/* 底部 */
.card-footer {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.location-row {
  width: 100%;
  margin-bottom: 12rpx;
}

.location-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  width: 100%;
  padding: 14rpx 18rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.15);
}

.location-icon {
  font-size: 32rpx;
  color: #667eea;
  flex-shrink: 0;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  flex: 1;
  line-height: 1.6;
  /* 最多显示2行 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
}

.footer-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 16rpx;
  flex-wrap: wrap;
}

.status-badge {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 12rpx;
  background-color: #f5f5f5;
  border-radius: 4rpx;
  letter-spacing: 0.5rpx;
  height: auto;
}

.btn-action {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: 500;
  padding: 0;
  background: none;
  border: none;
  line-height: 1.4;
  display: inline-flex;
  align-items: center;
  vertical-align: middle;
  letter-spacing: 0.5rpx;
  height: 44rpx;
}

.btn-action::after {
  border: none;
}

.btn-cancel {
  color: #666;
}

.btn-cancel-disabled {
  color: #999;
  opacity: 0.6;
}

.btn-cancel-disabled[disabled] {
  opacity: 0.6;
}

.detail-btn {
  color: #4A90E2;
  font-size: 28rpx;
  height: 44rpx;
  display: inline-flex;
  align-items: center;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-state text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.btn-primary {
  background-color: #1a1a1a;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

