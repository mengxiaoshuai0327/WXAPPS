/* pages/schedule/schedule.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);
  border-radius: 0 0 50% 50%;
  transform: scale(1.2);
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 40rpx 30rpx 30rpx;
}

/* 筛选栏卡片 */
.filter-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.filter-row {
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
}

.filter-row-second {
  margin-top: 20rpx;
}

.filter-item-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.filter-item-full {
  flex: 1;
}

.filter-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #666;
}

.picker-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  min-height: 44rpx;
  transition: all 0.3s;
}

.picker-view.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.picker-view.disabled {
  opacity: 0.5;
  background-color: #f0f0f0;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-view.active .picker-text {
  color: #fff;
}

.picker-view.disabled .picker-text {
  color: #999;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 8rpx;
  flex-shrink: 0;
}

.picker-view.active .picker-arrow {
  color: #fff;
}

/* 课程列表 */
.schedule-list {
  padding: 0;
}

.schedule-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 顶部主题标签 */
.theme-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.theme-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin-right: 8rpx;
}

.theme-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 卡片主体 */
.card-body {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

/* 左侧图片：授课教师头像 */
.course-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
  background-color: #f5f5f5;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.instructor-avatar {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* 右侧内容 */
.course-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 4rpx;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-icon {
  font-size: 28rpx;
  width: 32rpx;
  text-align: center;
}

.info-icon.blue {
  color: #667eea;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.info-text.blue {
  color: #667eea;
  font-weight: 500;
}

/* 底部 */
.card-footer {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.location-row {
  width: 100%;
}

.location-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  width: 100%;
  padding: 14rpx 18rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.15);
}

.location-icon {
  font-size: 32rpx;
  color: #667eea;
  flex-shrink: 0;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  flex: 1;
  line-height: 1.6;
  /* 最多显示2行 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
}

.footer-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
  flex-wrap: nowrap;
  width: 100%;
}

.footer-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
  min-width: 0;
}

.status-badge {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 12rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  letter-spacing: 0.5rpx;
  height: auto;
}

.status-badge.draft {
  color: #e6a23c;
  background-color: #fdf6ec;
}

.status-badge.in-progress {
  color: #67c23a;
  background-color: #f0f9ff;
}

.btn-action {
  font-size: 26rpx;
  font-weight: 500;
  padding: 10rpx 24rpx;
  border-radius: 12rpx;
  border: none;
  line-height: 1.5;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  vertical-align: middle;
  letter-spacing: 0.5rpx;
  min-height: 64rpx;
  box-sizing: border-box;
}

.btn-action::after {
  border: none;
}

.btn-book {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
  font-size: 26rpx;
  padding: 10rpx 32rpx;
  border-radius: 12rpx;
  flex: 0 0 auto;
  white-space: nowrap;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  flex: 0 0 auto;
  white-space: nowrap;
}

.btn-cancel-disabled {
  background-color: #f5f5f5;
  color: #999;
  opacity: 0.6;
}

.btn-cancel-disabled[disabled] {
  opacity: 0.6;
}

.btn-disabled-text {
  color: #999;
  font-size: 26rpx;
  display: inline-flex;
  align-items: center;
  padding: 10rpx 24rpx;
  min-height: 64rpx;
  box-sizing: border-box;
  flex: 0 0 auto;
  white-space: nowrap;
}

.detail-btn {
  color: #667eea;
  font-size: 26rpx;
  display: inline-flex;
  align-items: center;
  padding: 10rpx 24rpx;
  min-height: 64rpx;
  box-sizing: border-box;
  flex: 0 0 auto;
  white-space: nowrap;
}

/* 关注按钮样式 */
.btn-follow {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  padding: 10rpx 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  min-width: 120rpx;
  min-height: 64rpx;
  box-sizing: border-box;
  flex: 0 0 auto;
  white-space: nowrap;
}

.btn-follow::after {
  border: none;
}

.btn-follow:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.btn-followed {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.btn-followed:active {
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.4);
}

.follow-icon {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 24rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #fff;
  font-size: 28rpx;
}
